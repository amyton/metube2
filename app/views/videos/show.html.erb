<h1><%= @video.title %></h1>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%=@video.youtube_id%>" frameborder="0" allowfullscreen></iframe>

<p>
	Uploaded by: <%= @video.uploader_name.capitalize %> | Rating: <%= @video.rating %>
</p>

<p><%= @video.description %></p>

<p><%= link_to 'back', videos_url %></p>

<p>
	<%= link_to 'first', video_url(@video_first) %> |
	<%= link_to 'last', video_url(@video_last) %>
</p>
